<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="250dp"
    android:background="@drawable/appwidget_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@color/header_color"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivFirstrainlogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvMonitor"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivUpload"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_upload" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivmonitor"
        android:layout_width="320dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:src="@drawable/newhtcm8" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/monitor_header"
        android:textColor="@color/headerText_blue"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="18dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivdateicon"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new_icon" />

        <TextView
            android:id="@+id/tvTitledate"
            android:layout_width="300dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"
            android:text="@string/monitor_date"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <!--
         <TextView
        android:id="@+id/tvMessage"
        android:layout_width="320dp"
        android:layout_height="95dp"
        android:maxLines="5"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/monitor_news"
        android:textColor="@color/lightblack"
        android:textSize="12sp" />
    -->

    <TextView
        android:id="@+id/tvFirstRainApp"
        android:layout_width="320dp"
        android:layout_height="95dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/lightwhite" >

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@color/tranprantwhite"
            android:src="@drawable/new_refresh" />

        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@color/tranprantwhite"
            android:src="@drawable/new_left" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@color/tranprantwhite"
            android:src="@drawable/new_right" />

        <ImageButton
            android:id="@+id/btnSettingCall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@color/tranprantwhite"
            android:src="@drawable/new_setting" />
    </LinearLayout>

</LinearLayout>